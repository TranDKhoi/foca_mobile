<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/graygradient_background"
    tools:context=".activity.authen.signup.VerifiAccountScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/image_login_background"
            android:alpha="0.5"/>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/back_button"
                android:onClick="toSignupScreen"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bentonsans_bold"
                android:lineHeight="30dp"
                android:text="Enter 4-digit \nVerification code"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textFontWeight="400"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/subText"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/bentonsans_book"
                android:lineHeight="26px"
                android:textColor="@color/black"
                android:textFontWeight="400"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/codefield"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/rounded_edittext_normal"
                android:cursorVisible="false"
                android:inputType="number"
                android:letterSpacing="2.5"
                android:maxLength="4"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:fontFamily="@font/bentonsans_medium"
                    android:text="Resend Code"
                    android:textColor="#15BE77"
                    android:onClick="reSendCode"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/confirmBtn"
                    android:layout_width="141dp"
                    android:layout_height="57dp"
                    android:background="@drawable/light_green_gradient"
                    android:fontFamily="@font/bentonsans_bold"
                    android:text="Confirm"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>

            <ProgressBar
                android:layout_gravity="center_horizontal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:id="@+id/bar"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>