<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:scrollbars="none"
    tools:context=".activity.authen.signup.SignupScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/image_login_background"
            tools:ignore="ContentDescription" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="175dp"
                android:layout_height="140dp"
                android:src="@drawable/image_logo"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/viga"
                android:text="@string/app_name"
                android:textColor="#15BE77"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/DeliverFavoriteFood"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginTop="75dp"
                android:text="@string/SignupforFREE"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor"
                android:textSize="20sp"
                android:textStyle="bold" />


            <!--SignUp FORM-->
            <EditText
                android:id="@+id/idfield"
                android:layout_width="325dp"
                android:layout_height="57dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/rounded_edittext_normal"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:hint="@string/StudentID"
                android:importantForAutofill="no"
                android:inputType="number"
                android:paddingHorizontal="10dp" />

            <EditText
                android:id="@+id/passfield"
                android:layout_width="325dp"
                android:layout_height="57dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_edittext_normal"
                android:drawableStart="@drawable/ic_pass"
                android:drawablePadding="10dp"
                android:hint="@string/atleast6characters"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp" />

            <EditText
                android:id="@+id/repass"
                android:layout_width="325dp"
                android:layout_height="57dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_edittext_normal"
                android:drawableStart="@drawable/ic_pass"
                android:drawablePadding="10dp"
                android:hint="@string/ConfirmPassword"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp" />

            <ProgressBar
                android:id="@+id/bar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/createAccountBtn"
                android:layout_width="141dp"
                android:layout_height="57dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/light_green_gradient"
                android:text="@string/CreateAccount"
                android:textAllCaps="false"
                android:textColor="@color/textColorButtonWhite" />

            <TextView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/bentonsans_medium"
                android:paddingBottom="50dp"
                android:text="@string/alreadyhaveanaccount"
                android:textColor="#15BE77" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>

</ScrollView>